{
  "name": "Image Display",
  "version": "1.1.0",
  "description": "Displays an image as a fullscreen background layer",
  "author": "MyWallpaper",
  "entry": "index.js",
  "settings": {
    "sourceType": {
      "type": "select",
      "label": "Image Source",
      "default": "local",
      "options": [
        { "label": "Local Upload", "value": "local" },
        { "label": "Online URL", "value": "url" }
      ]
    },
    "wallpaperImage": {
      "type": "image",
      "label": "Upload Image",
      "showIf": { "setting": "sourceType", "equals": "local" }
    },
    "imageUrl": {
      "type": "string",
      "label": "Image URL",
      "default": "",
      "showIf": { "setting": "sourceType", "equals": "url" }
    }
  },
  "permissions": {
    "fileAccess": {
      "reason": "Display wallpaper image"
    }
  },
  "defaultLayout": {
    "xPercent": 0,
    "yPercent": 0,
    "widthPercent": 100,
    "heightPercent": 100
  },
  "ui": {
    "pointerEvents": "none"
  }
}
