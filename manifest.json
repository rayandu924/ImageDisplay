{
  "name": "Wallpaper Background",
  "version": "1.0.0",
  "sdkVersion": "2.0",
  "description": "Displays the user's OS wallpaper as a fullscreen background layer",
  "author": "MyWallpaper",
  "entry": "index.js",
  "settings": {
    "wallpaperImage": {
      "type": "image",
      "label": "Wallpaper Image"
    }
  },
  "permissions": {
    "fileAccess": {
      "reason": "Display wallpaper image"
    }
  },
  "defaultLayout": {
    "xPercent": 0,
    "yPercent": 0,
    "widthPercent": 100,
    "heightPercent": 100
  },
  "ui": {
    "pointerEvents": "none"
  }
}
